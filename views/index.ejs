<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Guia perguntas</title>
</head>
<body>
    <h1>Guia perguntas!</h1>
    <hr>
    <h3>Lista de perguntas</h3>

    <!-- <%= %> exibe valor de uma variavel -->
    <p>Nome: <%= nome %></p>
    <p>Linguagem preferida: <%= lang %></p>
    <p>Nomde da empresa: <%= empresa %></p>
    <p>Dinheiro no banco: <%= dinheiro %></p>
    
    <% if(msg == true){ %>
        <h3>Isso Ã© uma mensagem de erro!</h3>
    <% } else{  %>
        <h3>Nenhum erro!</h3>
    <% } %>

    <% produtos.forEach(function(produto){ %>
        <h4><%= produto.nome %></h4>
        <h5><%= produto.preco %></h5>
    <% }) %>


</body>
</html>